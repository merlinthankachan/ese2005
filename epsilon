// A C++ program  to calculate the amount of epsilon for Round-Off Error concept //
***********************************************************************************

#include <iostream>
using namespace std;

int main()
{
	 float epsmach = 1;
while (1+epsmach > 1)
{ epsmach = epsmach/2;
}
epsmach= epsmach*2;
cout << "The amount of round off error is " << epsmach << endl;
}



